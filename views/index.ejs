<%- include('./partials/header') %>
<h1>Forum</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/logout?_method=DELETE" method="POST">
                <button class="btn btn-secondary" type="submit">Log Out</button>
            </form>
        </div>
    </div>
</div>


<div class="container">
    <h1 class="mb-4">Forum Posts</h1>
    
    <div class="row">
        <a href="/posts/new" class="btn btn-success">New Post</a>
        
    </div>
    
    <% posts.forEach(post => { %>
        <div class="card mt-4 bg-gray text-black">
            <div class="card-body">
                <h4 class="card-title"> <%= post.title %> </h4>
                <div class="card-subtitle mb-2">
                    <%= post.createdAt.toLocaleDateString() %>
                </div>
                <div class="card-text mb-2"><%= post.description %>
                </div>
                <a href="posts/<%= post.id %>" class="btn btn-primary">View Comments</a>
                <% if((post.user).equals(user.id)){ %>
                <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <% } %>
            </div>
        </div>
    <% }) %>
</div>


<%- include('./partials/footer') %>