<%- include('./partials/header') %>


<div class="container">
    <div class="text-center">
        <h1>Register</h1>
    </div>
    
    <div class="row d-flex justify-content-center">
        <div class="col-md-6" >
            <form action="/register" method="POST">
                <div class="form-outline mb-4">
                    <label for="name" class="form-label text-white">Name</label>
                    <input class="form-control bg-light" type="text" id="name" name="name" required>
                </div>
                
                <div class="form-outline mb-4">
                    <label for="email" class="form-label text-white">Email</label>
                    <input class="form-control bg-light" type="email" id="email" name="email" required>
                </div>
            
                <div class="form-outline mb-4">
                    <label for="password" class="form-label text-white">Password</label>
                    <input class="form-control bg-light" type="password" id="password" name="password" required>
                </div>
            
                <button type="submit" class="btn btn-success">Register</button>
                <a href="/login" class="btn btn-secondary"b>Login</a>
            </form>
        </div>
    </div>
</div>





<%- include('./partials/footer') %>